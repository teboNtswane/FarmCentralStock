@model IEnumerable<FarmCentralStock.Models.Product_List>

@{
    ViewBag.Title = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <hr />

        <form asp-action="index" method="get">
            <div class="form-group">
                <label for="search">Search by Product Type</label>
                <input type="text" name="search" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="search" class="btn btn-outline-succes" />
            </div>
        </form>
        @Html.ActionLink("Back to list", "Index")
        <hr />

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date_Registered)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Farmer.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product_Type.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date_Registered)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Farmer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Type.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>